set -g prefix C-@

set -g mouse-resize-pane on
set -g mouse-select-pane on
set -g mouse-select-window on
setw -g mode-mouse on

set -g status-keys vi
setw -g mode-keys vi

if-shell "test $TERM = xterm-256color" "set -g default-terminal xterm-256color"
if-shell "test $TERM = gnome-256color" "set -g default-terminal gnome-256color"
